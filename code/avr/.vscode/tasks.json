{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make",
			"type": "shell",
			"command": "make",
			// start the build without prompting for task selection, use "group": "build" otherwise

			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            // arg passing example: in this case is executed make QUIET=0
            //"args": ["QUIET=0"],
            // Use the standard less compilation problem matcher.
            "problemMatcher": 
			 { 
                "owner": "cpp",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }			
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make",
			"group":"build",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },		
/*			"group": {
				"kind": "build",
				"isDefault": true
			},*/
			"args": [
				"clean"
			]
		}
	]
}
